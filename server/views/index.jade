doctype html
html(lang=en)
    head
        meta(charset='utf-8')
        title #{title}
        link(href='styles/main.css', rel='stylesheet', type='text/css')
    body
        #outer-wrapper
            #inner-wrapper
                #play
                    h1 #{title}
                    #game-board
                        #gauges
                            #guess
                                span.label Current
                                span.value
                            #guess-accuracy
                                span.label Low/High
                                span.value
                            #guesses-allowed
                                span.label Allowed
                                span.value
                            #guesses-made
                                span.label Made
                                span.value
                            #guesses-remaining
                                span.label Remaining
                                span.value
                        #tiles
                        .buttons
                            a.button.button-red.dialog(href='#splash')
                                | Quit
                        #splash.dialog
                            .dialog-content
                                h1 #{title}
                                ul.margin-left-0.padding-left-4.spaced-2
                                    li Guess the secret number before you run out of guesses.
                                    li The secret number changes from game to game.
                                    li Gauge the accuracy of your guesses with the low/high indicator.
                                    li Customize the number of guesses per game you're allowed.
                                    li Limitless replays: Play until your number's up!
                                .buttons
                                    a.button.button-green(href="#play")
                                        | Play
                                    a.button.button-yellow.dialog(href="#settings")
                                        | Settings
                        #settings.dialog
                            .dialog-content
                                h1 Settings
                                form#settings-form
                                    fieldset
                                        legend Number of Guesses
                                        label
                                            input(name='level', type='radio', value='13')
                                            | 13 (naive novices)
                                        label
                                            input(name='level', type='radio', value='10')
                                            | 10 (aspirational amateurs)
                                        label
                                            input(name='level', type='radio', value='7')
                                            | 7 (polished professionals)
                                .buttons
                                    a.button.button-green.dialog(href='#splash')
                                        | OK
                                    a.button.button-red.dialog(href='#splash')
                                        | Cancel
                        #win.dialog
                            .dialog-content
                                h1 Well Done!
                                p
                                    | You guessed right. The secret number was&#8230;
                                    span.secret-number
                                .buttons
                                    a.button.button-green(href='#play')
                                        | Replay
                                    a.button.button-red.dialog(href="#splash")
                                        | Exit
                        #lose.dialog
                            .dialog-content
                                h1 Bad Luck!
                                p
                                    | You guessed wrong. The secret number was&#8230;
                                    span.secret-number
                                .buttons
                                    a.button.button-green(href='#play')
                                        | Replay
                                    a.button.button-red.dialog(href="#splash")
                                        | Exit
        script(src='scripts/lib/vendor/jquery/jquery.js', type='text/javascript')
        script(src='scripts/lib/vendor/jquery.migrate/jquery-migrate-1.2.1.js', type='text/javascript')
        script(src='scripts/lib/vendor/jquery.tools/toolbox.expose.js', type='text/javascript')
        script(src='scripts/lib/vendor/jquery.tools/overlay.js', type='text/javascript')
        script(src='scripts/lib/vendor/underscore/underscore.js', type='text/javascript')
        script(src='scripts/lib/vendor/backbone/backbone.js', type='text/javascript')
        script(src='scripts/lib/vendor/backbone.super/backbone-super.js', type='text/javascript')
        script(src='scripts/_main.js', type='text/javascript')
